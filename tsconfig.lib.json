{
	"compilerOptions": {
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"target": "esnext",
		"verbatimModuleSyntax": true,
		"isolatedDeclarations": true,
		"declaration": true,
		"strict": true,
		"skipLibCheck": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"composite": true
	},
	"exclude": ["node_modules", "dist", "e2e", "**/*.spec.ts"]
}
